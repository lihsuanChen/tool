# ============================================
#  USER CONFIGURATION FOR 't' TOOL SUITE
# ============================================

# --- Network Defaults ---
# If you type 't ssh 105', it becomes BASE_IP.DEFAULT_SUBNET.105
export BASE_IP="192.168"
export DEFAULT_SUBNET="78"

# --- User Management ---
export REMOTE_USER="root"
export BRIDGE_USER="sunbird"
export AUTH_FILE="$HOME/.sunbird_auth"

# --- Local Paths ---
export CMD_LIBRARY="$HOME/scripts/m3_my_commands.txt"
export LOCAL_DNF_SCRIPT="$HOME/projects/test_automation/dnfupdate.sh"
# Path to your IntelliJ/IDE CLI launcher (used by 't edit')
export LOCAL_IDE_PATH="$HOME/.local/share/JetBrains/Toolbox/scripts/idea"

# --- SYSTEM SERVICES (NEW: Centralized Service Names) ---
export TOMCAT_SERVICE="tomcat10"
export TOMCAT_APP_NAME="dcTrackApp"
export PG_SERVICE="postgresql"

# --- REMOTE PATHS: TOMCAT (NEW) ---
# Used by m4_tool_tomcat.sh and m5_deploy_server.sh
export TOMCAT_HOME="/usr/share/${TOMCAT_SERVICE}"
export TOMCAT_WEBAPPS="/var/lib/${TOMCAT_SERVICE}/webapps"
export TOMCAT_LOG_BASE="/var/log/${TOMCAT_SERVICE}"

# --- REMOTE PATHS: POSTGRES (NEW) ---
# Used by m4_tool_postgres.sh and tool_viewlog.sh
export PG_DATA_DIR="/var/lib/pgsql/data"
export PG_HBA_CONF="${PG_DATA_DIR}/pg_hba.conf"
export POSTGRES_LOG_DIR="${PG_DATA_DIR}/log"

# --- REMOTE PATHS: APP & DOCKER (NEW) ---
export OCULAN_ROOT="/var/oculan"
export OCULAN_LOG_BASE="/var/log/oculan"
# Used by m6_docker_optimize.sh
export DOCKER_DATA_DEST="${OCULAN_ROOT}/docker-data"

# --- Remote Deployment Destinations (Legacy Support) ---
# Where the Client (Node.js) build goes
export DEST_CLIENT_DIST="/opt/raritan/dcTrack/appClient"
# Where Database Liquibase changesets go
export DEST_DB_CHANGESETS="/var/oculan/raritan/liquibase/changesets"

# --- Preferences ---
export DEFAULT_SEARCH_LIMIT="8"